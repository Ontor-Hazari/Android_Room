<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/last_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/pid"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/backside"
        android:elevation="8dp"
        android:ems="10"
        android:hint="Product ID"
        android:inputType="number"
        android:padding="8dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/pname"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/backside"
        android:elevation="8dp"
        android:ems="10"
        android:hint="Product Name"
        android:inputType="text"
        android:padding="8dp"

        app:layout_constraintEnd_toEndOf="@+id/pid"
        app:layout_constraintStart_toStartOf="@+id/pid"
        app:layout_constraintTop_toBottomOf="@+id/pid" />

    <EditText
        android:id="@+id/pprice"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/backside"
        android:elevation="8dp"
        android:ems="10"
        android:hint="Product Price"
        android:inputType="number"
        android:padding="8dp"

        app:layout_constraintEnd_toEndOf="@+id/pname"
        app:layout_constraintStart_toStartOf="@+id/pname"
        app:layout_constraintTop_toBottomOf="@+id/pname" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="SAVE DATA"
        app:layout_constraintEnd_toEndOf="@+id/pqtn"
        app:layout_constraintStart_toStartOf="@+id/pqtn"
        app:layout_constraintTop_toBottomOf="@+id/pqtn" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="CHECK CART"
        app:layout_constraintEnd_toEndOf="@+id/button"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <EditText
        android:id="@+id/pqtn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/backside"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:hint="Product Quantity"
        app:layout_constraintEnd_toEndOf="@+id/pprice"
        app:layout_constraintStart_toStartOf="@+id/pprice"
        app:layout_constraintTop_toBottomOf="@+id/pprice" />


</androidx.constraintlayout.widget.ConstraintLayout>